void invert(char *s)
{int i,j,k;
 char t;
 k=strlen(s);
 for(i=0,j=k-1;i<k/2;i++,j--)
 {  t=*(s+i);  *(s+i)=*(s+j);  *(s+j)=t; }
}
main()
{ FILE *fp;
char str[200],*p,i,j;
if((fp=fopen("p9_2.out","w"))==NULL) 
